<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="ShipFee">
    <resultMap id="ShipFeeMap" type="ShipFee">
        <id column="id" property="id"/>
        <result column="item_id" property="itemId"/>
        <result column="ship_fee" property="shipFee"/>
        <result column="ship_fee_template_id" property="shipFeeTemplateId"/>
        <result column="deliver_fee_template_id" property="deliverFeeTemplateId"/>
        <result column="ship_fee_template_name" property="shipFeeTemplateName"/>
        <result column="deliver_fee_template_name" property="deliverFeeTemplateName"/>
        <result column="weight" property="weight"/>
        <result column="volume" property="volume"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_item_ship_fees
    </sql>

    <sql id="cols_all">
        id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
        item_id, ship_fee, ship_fee_template_id, deliver_fee_template_id, ship_fee_template_name, deliver_fee_template_name,
        weight, volume, created_at, updated_at
    </sql>

    <sql id="vals">
        #{itemId}, #{shipFee}, #{shipFeeTemplateId}, #{deliverFeeTemplateId}, #{shipFeeTemplateName}, #{deliverFeeTemplateName},
        #{weight}, #{volume}, now(), now()
    </sql>

    <sql id="criterias">
        WHERE 1 = 1
        <if test="itemId != null"> AND item_id = #{itemId} </if>
    </sql>

    <insert id="create" parameterType="ShipFee" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb" />
        (<include refid="cols_exclude_id" />)
        VALUES
        (<include refid="vals" />)
    </insert>

    <update id="update" parameterType="ShipFee">
        UPDATE <include refid="tb"/>
        <set>
            ship_fee = #{shipFee},
            <if test="shipFeeTemplateId != null"> ship_fee_template_id = #{shipFeeTemplateId}, </if>
            <if test="deliverFeeTemplateId != null">deliver_fee_template_id = #{deliverFeeTemplateId},</if>
            <if test="shipFeeTemplateName != null"> ship_fee_template_name = #{shipFeeTemplateName}, </if>
            <if test="deliverFeeTemplateName != null">deliver_fee_template_name = #{deliverFeeTemplateName},</if>
            <if test="weight != null"> weight = #{weight}, </if>
            <if test="volume != null"> volume = #{volume}, </if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>

    <select id="load" parameterType="long" resultMap="ShipFeeMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByItemId" parameterType="long" resultMap="ShipFeeMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE item_id = #{itemId} LIMIT 1
    </select>

    <delete id="deleteByItemId" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE item_id = #{itemId}
    </delete>

    <delete id="deleteByTemplateId" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE deliver_fee_template_id = #{templateId}
    </delete>

    <select id="findByItemIds" resultMap="ShipFeeMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE item_id IN
        <foreach collection="array" open="(" separator="," close=")" item="item">
            #{item}
        </foreach>
    </select>
</mapper>