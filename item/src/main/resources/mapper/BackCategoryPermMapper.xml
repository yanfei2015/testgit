<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="BackCategoryPerm">

    <resultMap id="BackCategoryPermMap" type="BackCategoryPerm">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="user_type" property="userType"/>
        <result column="allow" property="allow"/>
        <result column="deny" property="deny"/>
        <result column="brand_allow" property="brandAllow"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_back_category_perms
    </sql>

    <sql id="cols_all">
      id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
      user_id, user_type, allow, deny, brand_allow, created_at, updated_at
    </sql>

    <sql id="vals">
        #{userId}, #{userType}, #{allow}, #{deny}, #{brandAllow}, now(), now()
    </sql>

    <insert id="create" parameterType="BackCategoryPerm" keyProperty="id" useGeneratedKeys="true">
      INSERT INTO
      <include refid="tb" />
      (<include refid="cols_exclude_id" />)
      VALUES
      (<include refid="vals" />)
    </insert>

    <update id="update" parameterType="BackCategoryPerm">
        UPDATE <include refid="tb"/>
        <set>
            <if test="allow != null"> allow = #{allow}, </if>
            <if test="deny != null"> deny = #{deny}, </if>
            <if test="brandAllow != null"> brand_allow = #{brandAllow}, </if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>

    <select id="get" parameterType="long" resultMap="BackCategoryPermMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="search" parameterType="map" resultMap="BackCategoryPermMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        <where>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="userType != null">AND user_type = #{userType}</if>
        </where>
    </select>
</mapper>