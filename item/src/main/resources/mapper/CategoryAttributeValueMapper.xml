<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="CategoryAttributeValue">
    <resultMap id="CategoryAttributeValueMap" type="io.terminus.parana.category.model.CategoryAttributeValue">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="key_id" property="keyId"/>
        <result column="value_id" property="valueId"/>
        <result column="value" property="value"/>
        <result column="logo" property="logo"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_category_attribute_values
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
      category_id, key_id, value_id, `value`, logo, created_at, updated_at
    </sql>

    <sql id="vals">
      #{categoryId}, #{keyId}, #{valueId}, #{value}, #{logo}, now(), now()
    </sql>

    <insert id="create" parameterType="io.terminus.parana.category.model.CategoryAttributeValue" keyProperty="id"
            useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <delete id="deleteById" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE id=#{id}
    </delete>

    <select id="findById" parameterType="long" resultMap="CategoryAttributeValueMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </select>

    <select id="findByCriteria" parameterType="io.terminus.parana.category.model.CategoryAttributeValue"
            resultMap="CategoryAttributeValueMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <where>
            <if test="categoryId != null">AND category_id = #{categoryId}</if>
            <if test="keyId != null">AND key_id = #{keyId}</if>
            <if test="valueId != null">AND value_id = #{valueId}</if>
        </where>
    </select>
</mapper>