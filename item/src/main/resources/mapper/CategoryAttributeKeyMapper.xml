<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="CategoryAttributeKey">
    <resultMap id="CategoryAttributeKeyMap" type="io.terminus.parana.category.model.CategoryAttributeKey">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="key_id" property="keyId"/>
        <result column="key_name" property="keyName"/>
        <result column="key_type" property="keyType"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_category_attribute_keys
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
      category_id, key_id, key_name, key_type, created_at, updated_at
    </sql>

    <sql id="vals">
      #{categoryId}, #{keyId}, #{keyName}, #{keyType}, now(), now()
    </sql>

    <insert id="create" parameterType="io.terminus.parana.category.model.CategoryAttributeKey" keyProperty="id"
            useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <delete id="deleteById" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE id=#{id}
    </delete>

    <select id="findById" parameterType="long" resultMap="CategoryAttributeKeyMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </select>

    <select id="findByCriteria" parameterType="io.terminus.parana.category.model.CategoryAttributeKey"
            resultMap="CategoryAttributeKeyMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <where>
            <if test="categoryId != null">AND category_id = #{categoryId}</if>
            <if test="keyId != null">AND key_id = #{keyId}</if>
            <if test="keyType != null">AND key_type = #{keyType}</if>
        </where>
    </select>
</mapper>