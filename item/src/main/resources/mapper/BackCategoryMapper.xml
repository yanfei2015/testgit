<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="BackCategory">

    <resultMap id="BackCategoryMap" type="BackCategory">
        <id column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="name" property="name"/>
        <result column="level" property="level"/>
        <result column="status" property="status"/>
        <result column="has_children" property="hasChildren"/>
        <result column="has_spu" property="hasSpu"/>
        <result column="outer_id" property="outerId"/>
        <result column="shop_business_id" property="shopBusinessId"/>
        <result column="rate" property="rate"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_back_categories
    </sql>

    <sql id="cols_all">
      id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
      pid, name, level, status, has_children, has_spu, outer_id, shop_business_id,rate, created_at, updated_at
    </sql>

    <sql id="vals">
        #{pid}, #{name}, #{level}, #{status}, #{hasChildren}, #{hasSpu}, #{outerId}, #{shopBusinessId},#{rate}, now(), now()
    </sql>

    <sql id="criteria">
        WHERE 1 = 1
        <if test="id != null"> AND id = #{id}</if>
        <if test="pid != null"> AND pid = #{pid}</if>
        <if test="name != null"> AND name LIKE CONCAT('%',#{name},'%')</if>
        <if test="startAt != null"> AND updated_at &gt;= #{startAt}</if>
        <if test="endAt != null"> AND updated_at &lt;= #{endAt}</if>
        <if test="level != null"> AND level = #{level}</if>
    </sql>


    <insert id="create" parameterType="BackCategory" keyProperty="id" useGeneratedKeys="true">
      INSERT INTO
      <include refid="tb" />
      (<include refid="cols_exclude_id" />)
      VALUES
      (<include refid="vals" />)
    </insert>

    <select id="load" parameterType="long" resultMap="BackCategoryMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="loads" parameterType="list" resultMap="BackCategoryMap">
        SELECT id,
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach collection="list" separator="," open="("
                 close=")" item="id">
            #{id}
        </foreach>
    </select>

    <select id="list" parameterType="BackCategory" resultMap="BackCategoryMap">
        SELECT <include refid="cols_all" />
        FROM <include refid="tb"/>
        WHERE 1 = 1
        <if test="pid != null"> AND pid = #{pid}  </if>
        <if test="name != null"> AND name = #{name} </if>
        <if test="level != null"> AND level = #{level} </if>
        <if test="status != null"> AND status = #{status} </if>
    </select>

    <select id="findByPid" parameterType="long" resultMap="BackCategoryMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE pid = #{pid} AND status = 1
    </select>

    <select id="findInPids" parameterType="list" resultMap="BackCategoryMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE pid IN
        <foreach collection="list" open="(" separator="," close=")"
                 item="pid">
            #{pid}
        </foreach>
    </select>

    <select id="findByNameAndPid" parameterType="map" resultMap="BackCategoryMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE name = #{name} and pid = #{pid}
    </select>

    <select id="findByLevel" parameterType="long" resultMap="BackCategoryMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE level = #{level} AND status = 1
    </select>

    <update id="setStatus" parameterType="map">
        UPDATE <include refid="tb" />
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <update id="setHasChildren" parameterType="map">
        UPDATE <include refid="tb" />
        SET has_children = #{hasChildren}
        WHERE id = #{id}
    </update>

    <update id="setHasSpu" parameterType="map">
        UPDATE <include refid="tb" />
        SET has_spu = #{hasSpu}
        WHERE id = #{id}
    </update>

    <update id="update" parameterType="BackCategory">
        UPDATE <include refid="tb"/>
        <set>
            <if test="name != null"> name = #{name}, </if>
            <if test="outerId != null"> outer_id = #{outerId}, </if>
            <if test="shopBusinessId != null"> shop_business_id = #{shopBusinessId}, </if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>

    <update id="setBusiness" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET shop_business_id = #{businessId}
        WHERE id IN
        <foreach collection="categoryIds" open="(" item="categoryId" close=")" separator=",">
            #{categoryId}
        </foreach>
    </update>

    <update id="setRate" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET rate = #{rate}
        WHERE id = #{id}
    </update>

    <select id="findByBusiness" parameterType="map" resultMap="BackCategoryMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE shop_business_id = #{businessId}
    </select>

    <!-- 计数-->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        AND status = 1
    </select>

    <!-- 分页-->
    <select id="backCategoryPaging" parameterType="map" resultMap="BackCategoryMap">
      SELECT <include refid="cols_all"/>
      FROM <include refid="tb"/>
      <include refid="criteria"/>
      AND status = 1
      ORDER BY  updated_at DESC LIMIT #{offset},#{limit}
    </select>

</mapper>