<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="Spu">

    <resultMap id="SpuMap" type="Spu">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="name" property="name"/>
        <result column="status" property="status"/>
        <result column="brand_id" property="brandId"/>
        <result column="brand_name" property="brandName"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_spus
    </sql>

    <sql id="cols_all">
      id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
      category_id, name, status, brand_id, brand_name, created_at, updated_at
    </sql>

    <sql id="vals">
        #{categoryId}, #{name}, #{status}, #{brandId}, #{brandName}, now(), now()
    </sql>

    <!-- 查询条件 -->
    <sql id="criteria">
        WHERE 1 = 1
        <if test="categoryId != null"> AND category_id = #{categoryId}  </if>
        <if test="brandId != null"> AND brand_id = #{brandId} </if>
        <if test="name != null"> AND name = #{name} </if>
        AND status = 1
    </sql>

    <insert id="create" parameterType="Spu" keyProperty="id" useGeneratedKeys="true">
      INSERT INTO
      <include refid="tb" />
      (<include refid="cols_exclude_id" />)
      VALUES
      (<include refid="vals" />)
    </insert>

    <select id="load" parameterType="long" resultMap="SpuMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="loads" parameterType="list" resultMap="SpuMap">
        SELECT id,
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach collection="list" separator="," open="("
                 close=")" item="id">
            #{id}
        </foreach>
    </select>

    <select id="list" parameterType="Spu" resultMap="SpuMap">
        SELECT <include refid="cols_all" />
        FROM <include refid="tb"/>
        <include refid="criteria" />
    </select>

    <select id="findBy" parameterType="Spu" resultMap="SpuMap">
        SELECT <include refid="cols_all" />
        FROM <include refid="tb"/>
        <include refid="criteria" />
    </select>

    <update id="setStatus" parameterType="map">
        UPDATE <include refid="tb" />
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <update id="update" parameterType="Spu">
        UPDATE <include refid="tb"/>
        <set>
            <if test="brandId != null"> brand_id = #{brandId}, </if>
            <if test="brandName != null"> brand_name = #{brandName}, </if>
            <if test="name != null"> name = #{name}, </if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>
</mapper>